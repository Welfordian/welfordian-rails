<div class="container-fluid m-auto min-h-screen h-full pb-8 pt-24 flex justify-center px-4 bg-blue-darkest">
   <form class="w-full max-w-md mt-2" method="POST">
      <h1 class="block sm:flex items-center text-white">
         Get in touch with me
         <p class="text-sm mt-2 mt-0 sm:ml-6">
            No recruiters, please.
         </p>
      </h1>

     <% flash.each do |key, value| %>
       <div class="flex items-center bg-blue text-white text-sm font-bold px-4 py-3 mt-4" role="alert">
         <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
         <p><%= value %></p>
       </div>
     <% end %>

      <div class="flex flex-wrap -mx-3 mt-8">
         <div class="w-full px-3"><label for="full-name" class="block uppercase tracking-wide text-xs font-bold mb-2 text-white">
            Full Name
            </label> <input name="full_name" id="full-name" placeholder="Jane Doe" type="text" class="appearance-none focus:shadow-lg block w-full text-grey-darker border border-grey rounded p-4 px-4 leading-tight focus:outline-none focus:bg-white focus:border-grey-darker shadow-md border-grey" required>
         </div>
         <div class="w-full mt-8 px-3"><label for="email" class="block uppercase focus:shadow-lg tracking-wide text-xs font-bold mb-2 text-white">
            Email Address
            </label> <input name="email" id="email" placeholder="jane.doe@example.com" type="email" class="appearance-none focus:shadow-lg block w-full text-grey-darker border border-grey rounded p-4 px-4 leading-tight focus:outline-none focus:bg-white focus:border-grey-darker shadow-md border-grey" required>
         </div>
         <div class="w-full mt-8 px-3">
            <label class="block uppercase tracking-wide text-xs font-bold mb-2 text-white">
            What's this about?
            </label>
            <div tabindex="0" class="focus:shadow-outline app-button sm:w-auto font-bold py-2 px-4 rounded shadow-md focus:shadow-lg focus:outline-none enquiry-option mr-2 w-full block sm:w-auto sm:inline-block cursor-pointer my-2 bg-transparent font-semibold focus:outline-none focus:shadow-lg shadow-md hover:shadow-lg py-2 px-4 border rounded text-blue-darkest bg-white hover:bg-grey-light hover:shadow-lg" tabindex="0">
              <input id="general_enquiry" name="has_general_enquiry" type="checkbox" class="hidden" checked />
              General Enquiry
            </div>
            <div tabindex="0" class="focus:shadow-outline app-button sm:w-auto font-bold py-2 px-4 rounded shadow-md focus:shadow-lg focus:outline-none enquiry-option mr-2 w-full block sm:w-auto sm:inline-block cursor-pointer my-2 bg-transparent font-semibold focus:outline-none focus:shadow-lg shadow-md hover:shadow-lg py-2 px-4 border rounded text-white hover:text-blue-darkest hover:bg-grey-light hover:shadow-lg" tabindex="0">
              <input id="web_development" name="has_web_development" type="checkbox" class="hidden" />
              Web Development
            </div>
            <div tabindex="0" class="focus:shadow-outline app-button sm:w-auto font-bold py-2 px-4 rounded shadow-md focus:shadow-lg focus:outline-none enquiry-option mr-2 w-full block sm:w-auto sm:inline-block cursor-pointer my-2 bg-transparent font-semibold focus:outline-none focus:shadow-lg shadow-md hover:shadow-lg py-2 px-4 border rounded text-white hover:text-blue-darkest hover:bg-grey-light hover:shadow-lg" tabindex="0">
              <input id="freelancing" name="has_freelancing" type="checkbox" class="hidden" />
              Freelancing
            </div>
            <div tabindex="0" class="focus:shadow-outline app-button sm:w-auto font-bold py-2 px-4 rounded shadow-md focus:shadow-lg focus:outline-none enquiry-option mr-2 w-full block sm:w-auto sm:inline-block cursor-pointer my-2 bg-transparent font-semibold focus:outline-none focus:shadow-lg shadow-md hover:shadow-lg py-2 px-4 border rounded text-white hover:text-blue-darkest hover:bg-grey-light hover:shadow-lg" tabindex="0">
              <input id="full_time" name="has_full_time" type="checkbox" class="hidden" />
              Full-Time
            </div>
         </div>
         <div class="w-full mt-6 px-3"><label for="more-details" class="block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2 text-white">
            Anything else to add?</label> <textarea name="more_details" id="more-details" placeholder="Some very important information" class="appearance-none block w-full h-32 text-grey-darker border rounded p-4 px-4 leading-tight focus:outline-none focus:bg-white focus:border-grey-darker focus:shadow-lg shadow-md resize-none border-white"></textarea>
         </div>
         <div class="w-full px-3">
            <button class="app-button sm:w-auto font-bold py-2 px-4 rounded shadow-md focus:shadow-lg focus:outline-none mt-8 text-blue-darkest bg-white hover:bg-grey-light hover:shadow-lg">Get in touch</button> <!----> <!----> <!----> <!---->
         </div>
      </div>

     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   </form>
</div>
